FROM node:22.15.0

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

EXPOSE 5173

# Run development server with host set to allow external connections
CMD ["pnpm", "dev", "--host"]